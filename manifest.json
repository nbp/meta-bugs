{
  "manifest_version": 2,
  "name": "Meta Bugs",
  "version": "0.1",

  "description": "Display in Bugzilla the transitive list of blocked bugs",

  "icons": {
    "48": "icons/meta-bug-48.png"
  },

  "developer": {
    "name": "Nicolas B. Pierron",
    "url": "https://github.com/nbp/MetaBugs"
  },

  "content_scripts": [
    { "matches": [
        "*://*/",
        "*://*/*bugzilla.mozilla.org*/",
        "*://*/*show_bug.cgi*"
      ],
      "include_globs": [
        "*bugz*",
        "*bugs*",
        "*Bugs*",
        "*bz*"
      ],
      "js": ["meta-bugs.js"]
    }
  ]
}
